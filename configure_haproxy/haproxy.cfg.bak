global
  daemon
  maxconn 256

defaults
  mode http
  timeout connect 5000ms
  timeout client 50000ms
  timeout server 50000ms

frontend www-in
  bind *:80
  acl host_prod hdr_beg(host) www.
  acl host_dev  hdr_beg(host) www-dev.

  use_backend prod-server if host_prod
  use_backend dev-server  if host_dev

backend dev-server
  server server1 frontend.service:5000 maxconn 32
  reqadd x-mayfly:\ dev

backend prod-server
  server server1 frontend.service:5000 maxconn 32
  reqadd x-mayfly:\ prod
